<p style="color: green"><%= notice %></p>

<%= render @film %>
<div>
  <%= link_to "Edit this film", edit_film_path(@film) %> |
  <%= link_to "Back to films", films_path %>

  <%= button_to "Destroy this film", @film, method: :delete %>
  <% @film.reviews.each do |review| %>
      <h3 style="color:blue"> Review</h3>

    <%= review.description %>

    <p>
      <%= link_to "Show this review", review_path(review) %>
    </p>
  <% end %>

  <%= link_to "New reviews", new_review_path(@film) %>


  

</div>
